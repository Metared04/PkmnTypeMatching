<Window x:Class="WpfPkmn.Views.ShowWeaknessesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPkmn.Views"
        xmlns:viewModel="clr-namespace:WpfPkmn.ViewModels"
        mc:Ignorable="d"
        Title="Show weaknesses" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewModel:GetWeaknessesViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/fondHerbe.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Menu Grid.Row="0"
              Grid.Column="1"
              Grid.ColumnSpan="2">
            <MenuItem Header="Options">
                <MenuItem Header="Quitter"></MenuItem>
            </MenuItem>
            <MenuItem Header="Pkmn">
                <MenuItem Header="Type matching"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock Text="Composer votre equipe"
                   Grid.Row="1"
                   Grid.Column="4"
                   Grid.ColumnSpan="3"/>
        <ComboBox ItemsSource="{Binding FirstType}"
                  SelectedItem="{Binding SelectedFirstType}"
                  DisplayMemberPath="Label"
                  Margin="20"
                  Grid.Row="2"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        <ComboBox ItemsSource="{Binding SecondType}"
                  SelectedItem="{Binding SelectedSecondType}"
                  DisplayMemberPath="Label"
                  Margin="20"
                  Grid.Row="4"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        <Button Content="Ajouter"
                Command="{Binding ExecuteAddTypeToList}"
                Margin="0,10,0,0"
                Grid.Row="2"
                Grid.Column="7"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"/>
        <TextBlock Text="Votre equipe"
                   Grid.Row="7"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"/>
        <TextBlock Text="Ses faiblesses"
                   Grid.Row="7"
                   Grid.Column="4"
                   Grid.ColumnSpan="3"/>
    </Grid>
</Window>
