<Window x:Class="WpfPkmn.Views.TypeMatchingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPkmn.Views"
        xmlns:viewModel="clr-namespace:WpfPkmn.ViewModels"
        mc:Ignorable="d"
        Title="Type matching" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:GetPkmnTypesViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="25"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <ComboBox ItemsSource="{Binding FirstType}"
                  SelectedItem="{Binding SelectedFirstType}"
                  DisplayMemberPath="Label"
                  Margin="20"
                  Grid.Row="2"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        <ComboBox ItemsSource="{Binding SecondType}"
                  SelectedItem="{Binding SelectedSecondType}"
                  DisplayMemberPath="Label" 
                  Margin="20"
                  Grid.Row="3"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"/>
        <Button 
            Content="Valider" 
            Command="{Binding ExecuteDisplayFirstType}" 
            Margin="0,10,0,0"
            Grid.Row="2" 
            Grid.Column="7"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"/>
        <Button 
            Content="test" 
            Command="{Binding ExecuteDisplayPkmnResistances}" 
            Margin="0,10,0,0"
            Cursor="Hand"
            Grid.Row="3"
            Grid.Column="7"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"/>
        <TextBlock Text="Type(s) resistant :"
                   Grid.Row="7"
                   Grid.Column="1"/>
        <ListView ItemsSource="{Binding ResistingTypes}"
                  Grid.Row="8"
                  Grid.Column="1"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Type(s) faible :"
                   Grid.Row="7"
                   Grid.Column="2"/>
        <ListView ItemsSource="{Binding NotResistingTypes}"
                  Grid.Row="8"
                  Grid.Column="2"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</Window>
