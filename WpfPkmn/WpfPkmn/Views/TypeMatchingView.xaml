<Window x:Class="WpfPkmn.Views.TypeMatchingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPkmn.Views"
        xmlns:viewModel="clr-namespace:WpfPkmn.ViewModels"
        mc:Ignorable="d"
        Title="Type matching" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:GetPkmnTypesViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/fondHerbe.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Menu Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="Options">
                <MenuItem Header="Quitter"></MenuItem>
            </MenuItem>
            <MenuItem Header="Pkmn">
                <MenuItem Header="Composition" Command="{Binding OpenShowTeamsWeaknessesCommand}"></MenuItem>
            </MenuItem>
        </Menu>
        <ComboBox ItemsSource="{Binding FirstType}"
                  SelectedItem="{Binding SelectedFirstType}"
                  DisplayMemberPath="Label"
                  Margin="20"
                  Grid.Row="2"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        <ComboBox ItemsSource="{Binding SecondType}"
                  SelectedItem="{Binding SelectedSecondType}"
                  DisplayMemberPath="Label" 
                  Margin="20"
                  Grid.Row="3"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        <Button Content="Valider"
                Command="{Binding ExecuteDisplayFirstType}"
                Margin="0,10,0,0"
                Grid.Row="2"
                Grid.Column="7"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"/>
        <Button Content="test"
                Command="{Binding ExecuteDisplayPkmnResistances}"
                Margin="0,10,0,0"
                Cursor="Hand"
                Grid.Row="3"
                Grid.Column="7"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"/>
        <Button Content="Afficher"
                Command="{Binding ExecuteDisplayRecommandedPkmn}"
                Grid.Row="7"
                Grid.Column="6"/>
        <TextBlock Text="Type faibles"
                   Grid.Row="5"
                   Grid.Column="1" 
                   FontWeight="Bold"/>
        <ListView ItemsSource="{Binding FirstTypeWeakTypes}"
                  Grid.Row="6"
                  Grid.Column="1"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Type resistants"
                   Grid.Row="5"
                   Grid.Column="3"
                   FontWeight="Bold"/>
        <ListView ItemsSource="{Binding FirstTypeResistingTypes}"
                  Grid.Row="6"
                  Grid.Column="3"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="(Offensive) Type(s) qui resistent :"
                   Grid.Row="7"
                   Grid.Column="1"
                   FontWeight="Bold"/>
        <TextBlock Text="{Binding Account}"
                   Grid.Row="7"
                   Grid.Column="5"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>
        <ListView ItemsSource="{Binding DefensiveWeakTypesList}"
                  Grid.Row="8"
                  Grid.Column="1"
                  Grid.RowSpan="2"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="(Offensive) Type(s) faibles :"
                   Grid.Row="7"
                   Grid.Column="2"/>
        <ListView ItemsSource="{Binding DefensiveResistingTypesList}"
                  Grid.Row="8"
                  Grid.Column="2"
                  Grid.RowSpan="2"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Double type resistant :"
                   Grid.Row="7"
                   Grid.Column="4"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"/>
        <ListView ItemsSource="{Binding ResistingDoubleTypes}"
                  Grid.Row="8"
                  Grid.Column="4"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Double type faibles :"
                   Grid.Row="7"
                   Grid.Column="7"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"/>
        <ListView ItemsSource="{Binding WeakDoubleTypes}"
                  Grid.Row="8"
                  Grid.Column="7"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</Window>
